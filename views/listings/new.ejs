<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3 class="home-txt">Create a New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="from-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter Title"
            type="text"
            class="form-control" required>
            <div class="invalid-feedback">Please Enter a Valid Title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="from-label">Description</label>
          <input
            name="listing[description]"
            type="text"
            class="form-control"
            placeholder="Description" required/>
            <div class="invalid-feedback">Please Enter a Short Description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="from-label">Upload Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control" required />
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="from-label">Price</label>
                <input
                  name="listing[price]"
                  placeholder="Enter price"
                  type="text"
                  class="form-control" required/>
                  <div class="invalid-feedback">Please Enter Price </div>
              </div>
            <div class="mb-3 col-md-8">
              <label for="country" class="from-label">Country</label>
              <input
                name="listing[country]"
                placeholder="Enter Country Name"
                type="text"
                class="form-control" required/>
                <div class="invalid-feedback">Please Enter Country Details </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="from-label">Location</label>
            <input
              name="listing[location]"
              placeholder="Enter Location"
              type="text"
              class="form-control" required/>
              <div class="invalid-feedback">Please Enter Location Information </div>
          </div>
        <button class="btn btn-dark mb-3 add-btn">Add</button>
      </div>
    </div>
  </form>
</body>
